                        <% tableClass = "grey"; %>
                    <% } %>
                    <% if(climbs[i].climb_category === 'Advanced'){ %>
                        <tr class=<%=`${tableClass}`%>>
                            <td class = "table-data"><%= climbs[i].climb_name %></td>
                            <td class = "table-data"><%= climbs[i].red_points %></td>
                            <td class = "table-data"><%= climbs[i].flash_points %></td>
                        </tr>
                    <% } %>    
                <% } %>
                </table>
            </div>
            
            <div class="myCol col-sm-3 col-md-3 col-lg-3 col-xl-3">
                <h4><u>Open:</u></h4>
                <table>
                    <tr class="open table-head">
                        <th class = "table-data">Climb</th>
                        <th class = "table-data">Redpoint</th>
